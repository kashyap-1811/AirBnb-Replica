    <script>
      const bgImageDiv = document.querySelector('.hero-slider .bg-image');
      const images = [
        'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQDalECwHUIWjxDoTEkDOLfNYYTmPaygK0xpQ&s',
        'https://res.cloudinary.com/worldpackers/image/upload/c_limit,f_auto,q_auto,w_1140/deflfyqfahzdiyzmxpjt',
        'https://www.travelandleisure.com/thmb/rbPz5_6COrWFh94qFRHYLJrRM-g=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/iguazu-falls-argentina-brazil-MOSTBEAUTIFUL0921-e967cc4764ca4eb2b9941bd1b48d64b5.jpg',
        'https://media.istockphoto.com/id/1044022268/photo/compass-of-tourists-on-mountain-at-sunset-sky.jpg?s=612x612&w=0&k=20&c=VOEdiRNfZhpEu9wNQqYeq1Arjr9AFgVZ8xFDgTJGx_8=',
        'https://media.istockphoto.com/id/1438494420/photo/beautiful-view-with-ulriken-cable-car-and-sunset-seen-from-the-mount-ulriken-in-bergen-norway.jpg?s=612x612&w=0&k=20&c=rgyBup7_fTYUTd6UKBgx2MPzcEjTNaANI3nj9jDdFHk=',
        'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcROLXV7ssreR77_gYKm0t_R96Wp_R76dUJwPQ&s',
      ];

      let currentImageIndex = 0;

      function changeBackground() {
        bgImageDiv.classList.add("fade-out");

        setTimeout(() => {
          bgImageDiv.style.backgroundImage = `url('${images[currentImageIndex]}')`;
          bgImageDiv.classList.remove("fade-out");
          currentImageIndex = (currentImageIndex + 1) % images.length;
        }, 600);
      }

      // Initial background
      bgImageDiv.style.backgroundImage = `url('${images[0]}')`;
      setInterval(changeBackground, 4000);
    </script>


    <script>
      const phrases = ["Explore Listings", "Travel World", "Visit Your Dream"];
      let current = 0;
      const textSpan = document.getElementById("button-text");

      function typeText(text) {
        textSpan.innerHTML = "";
        let delay = 0;
        for (let i = 0; i < text.length; i++) {
          const charSpan = document.createElement("span");
          charSpan.textContent = text[i];

          setTimeout(() => {
            textSpan.appendChild(charSpan);
            // Force reflow before adding visible class for animation
            void charSpan.offsetWidth;
            charSpan.classList.add("visible");
          }, delay);

          delay += 80;
        }
      }

      function clearText(callback) {
        const spans = Array.from(textSpan.querySelectorAll("span")).reverse();
        let delay = 0;
        spans.forEach((span, i) => {
          setTimeout(() => {
            span.classList.remove("visible");
            if (i === spans.length - 1 && callback) callback();
          }, delay);
          delay += 40;
        });
      }

      function cycleText() {
        const next = (current + 1) % phrases.length;
        clearText(() => {
          current = next;
          setTimeout(() => typeText(phrases[current]), 200);
        });
      }

      // Start
      typeText(phrases[current]);
      setInterval(cycleText, 3000);
    </script>

