<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="container my-5">
            <div class="row flex-column flex-lg-row align-items-center shadow-lg rounded-4 overflow-hidden">

                <!-- Left: Image (shows first on small screens) -->
                <div class="col-12 col-lg-7 p-0 fade-in">
                    <img src="https://thumbs.dreamstime.com/b/online-application-registration-form-graphics-concept-75688264.jpg"
                        class="img-fluid w-100 h-100 object-fit-cover"
                        style="object-position: center; height: 100%; object-fit: cover;" alt="Welcome Image">
                </div>

                <!-- Right: Signup Form -->
                <div class="col-12 col-lg-5 p-5 bg-white fade-in">
                    <h2 class="fw-bold mb-4 text-center">Create Your Account</h2>
                    <p class="text-center text-muted mb-4">Start your journey with us today!</p>

                    <form method="POST" action="/signup" class="needs-validation" novalidate>
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="user[username]"
                                class="form-control rounded-pill <%= errors && errors.username ? 'is-invalid' : '' %>"
                                placeholder="Enter your username" value="<%= user ? user.username : '' %>" required>
                            <% if (errors && errors.username) { %>
                                <div class="invalid-feedback">
                                    <%= errors.username %>
                                </div>
                                <% } else { %>
                                    <div class="valid-feedback">Looks good!</div>
                                    <% } %>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" id="email" name="user[email]" class="form-control rounded-pill"
                                placeholder="Enter your email" required>
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid email.</div>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="user[password]" class="form-control rounded-pill"
                                placeholder="Enter password" required minlength="6">
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Password must be at least 6 characters.</div>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Sign Up</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </body>