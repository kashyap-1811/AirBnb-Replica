<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="container my-5">
            <div class="row flex-column flex-lg-row align-items-center shadow-lg rounded-4 overflow-hidden">

                <!-- Left: Image (optional) -->
                <div class="col-12 col-lg-7 p-0 fade-in">
                    <img src="https://www.bluehost.in/blog/wp-content/uploads/2024/01/How-to-start-a-travel-blog-1024x576.png"
                        class="img-fluid w-100 h-100 object-fit-cover"
                        style="object-position: center; height: 100%; object-fit: cover;" alt="Login Image">
                </div>

                <!-- Right: Login Form -->
                <div class="col-12 col-lg-5 p-5 bg-white fade-in">
                    <h2 class="fw-bold mb-4 text-center">Log In</h2>
                    <p class="text-center text-muted mb-4">Welcome back! Please enter your details.</p>

                    <form method="POST" action="/login" class="needs-validation" novalidate>
                        <!-- Username -->
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="user[username]"
                                class="form-control rounded-pill <%= errors && errors.username ? 'is-invalid' : '' %>"
                                placeholder="Enter your username" value="<%= user ? user.username : '' %>" required>
                            <% if (errors && errors.username) { %>
                                <div class="invalid-feedback">
                                    <%= errors.username %>
                                </div>
                                <% } else { %>
                                    <div class="valid-feedback">Looks good!</div>
                                    <% } %>
                        </div>

                        <!-- Password -->
                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="user[password]"
                                class="form-control rounded-pill <%= errors && errors.password ? 'is-invalid' : '' %>"
                                placeholder="Enter your password" required>
                            <% if (errors && errors.password) { %>
                                <div class="invalid-feedback">
                                    <%= errors.password %>
                                </div>
                                <% } else { %>
                                    <div class="valid-feedback">Looks good!</div>
                                    <% } %>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg rounded-pill">Log In</button>
                        </div>

                        <!-- Signup prompt -->
                        <p class="text-center mt-3">
                            Didn't have account? <a href="/signup" class="text-primary fw-semibold">Sign up</a>
                        </p>
                    </form>
                </div>

            </div>
        </div>
    </body>